<Window x:Class="Pomodoro_Timer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro_Timer"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="applyButton" Content="Apply" HorizontalAlignment="Left" Margin="79,353,0,0" VerticalAlignment="Top" Width="76" Click="applyButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="290,353,0,0" VerticalAlignment="Top" Width="76" Click="cancelButton_Click"/>
        <ComboBox x:Name="pomodoroDurationCombobox" HorizontalAlignment="Left" Margin="79,30,0,0" VerticalAlignment="Top" Width="234"/>
        <ComboBox x:Name="pomodoroBreakCombobox" HorizontalAlignment="Left" Margin="79,57,0,0" VerticalAlignment="Top" Width="234"/>
        <ComboBox x:Name="pomodoroLongBreakCombobox" HorizontalAlignment="Left" Margin="79,84,0,0" VerticalAlignment="Top" Width="221"/>
        <ComboBox x:Name="pomodoroLongBreakOccuranceCombobox" HorizontalAlignment="Left" Margin="74,134,0,0" VerticalAlignment="Top" Width="226" RenderTransformOrigin="0.137,-1.636"/>

    </Grid>
</Window>
